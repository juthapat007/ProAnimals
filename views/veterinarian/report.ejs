<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <title>รายงานการเข้ารับบริการ</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@300;400;500;700&display=swap" rel="stylesheet">
  <%- include('../partials/link') %>
  <style>
   

    .filter-section {
      background: var(--light-gray);
      padding: 20px;
      border-radius: var(--border-radius);
      margin-bottom: 30px;
      text-align: center;
      border: 2px solid rgba(255, 154, 162, 0.2);
    }

    .filter-label {
      color: var(--primary);
      font-weight: 600;
      margin-bottom: 15px;
      font-size: 1.1rem;
    }

    .filter-buttons {
      display: flex;
      gap: 10px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .filter-btn {
      padding: 12px 24px;
      border: 2px solid var(--primary);
      background: var(--white);
      color: var(--primary);
      border-radius: var(--border-radius);
      cursor: pointer;
      transition: var(--transition);
      font-weight: 500;
      font-size: 1rem;
      box-shadow: 0 2px 6px rgba(255, 154, 162, 0.2);
    }

    .filter-btn:hover {
      background: var(--accent);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(255, 154, 162, 0.3);
    }

    .filter-btn.active {
      background: var(--primary);
      color: var(--white);
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(255, 154, 162, 0.4);
    }

    .chart-container {
      background: var(--white);
      padding: 30px;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow);
      border: 1px solid rgba(255, 154, 162, 0.2);
      position: relative;
    }

    .chart-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--primary), var(--secondary), var(--accent));
      border-radius: var(--border-radius) var(--border-radius) 0 0;
    }

    #chartCanvas {
      max-width: 100%;
      margin: 0 auto;
      display: block;
    }

    .stats-summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: var(--white);
      padding: 20px;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow);
      border-left: 4px solid var(--primary);
      transition: var(--transition);
    }

    .stat-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(255, 154, 162, 0.3);
    }

    .stat-number {
      font-size: 2rem;
      font-weight: 700;
      color: var(--primary);
      margin-bottom: 5px;
    }

    .stat-label {
      color: var(--text);
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      body {
        padding: 10px;
      }
      
      .content {
        padding: 20px;
      }
      
      .header h1 {
        font-size: 1.5rem;
      }
      
      .filter-buttons {
        flex-direction: column;
        align-items: center;
      }
      
      .filter-btn {
        width: 100%;
        max-width: 200px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
     <%- include('../partials/header_vet') %>
    <div class="header">
      <h1>
        <i class="fas fa-chart-bar"></i>
        ระบบรายงานสัตวแพทย์
      </h1>
      <p>ข้อมูลสถิติการเข้ารับบริการ</p>
    </div>

    <div class="content">
      <!-- Report Title -->
      <h2 class="report-title">
        <i class="fas fa-calendar-alt" style="margin-right: 10px;"></i>
        กราฟรายงานการเข้ารับบริการ
        <span style="color: var(--text); font-size: 1.2rem;">
          (<%= type === "week" ? "รายสัปดาห์" : type === "year" ? "รายปี" : "รายเดือน" %>)
        </span>
      </h2>


      <!-- Filter Section -->
      <div class="filter-section">
        <div class="filter-label">
          <i class="fas fa-filter"></i>
          เลือกช่วงเวลาที่ต้องการดู
        </div>
        <div class="filter-buttons" id="filterButtons">
          <button class="filter-btn <%= type === 'week' ? 'active' : '' %>" data-type="week">
            <i class="fas fa-calendar-week"></i>
            รายสัปดาห์
          </button>
          <button class="filter-btn <%= type === 'month' ? 'active' : '' %>" data-type="month">
            <i class="fas fa-calendar-alt"></i>
            รายเดือน
          </button>
          <button class="filter-btn <%= type === 'year' ? 'active' : '' %>" data-type="year">
            <i class="fas fa-calendar"></i>
            รายปี
          </button>
        </div>
      </div>

      <!-- Chart -->
      <div class="chart-container">
        <canvas id="chartCanvas"></canvas>
      </div>
    </div>
  </div>

  <script>
    // Filter buttons functionality
    document.querySelectorAll('#filterButtons button').forEach(btn => {
      btn.addEventListener('click', () => {
        const type = btn.getAttribute('data-type');
        window.location.href = '?type=' + type;
      });
    });

    // Chart configuration with theme colors
    const ctx = document.getElementById('chartCanvas').getContext('2d');
    
    // Create gradient
    const gradient = ctx.createLinearGradient(0, 0, 0, 400);
    gradient.addColorStop(0, '#9FA9F0');
    gradient.addColorStop(1, 'rgba(255, 183, 178, 0.3)');

    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(labels) %>,
        datasets: [{
          label: 'จำนวนการเข้ารับบริการ',
          data: <%- JSON.stringify(data) %>,
          backgroundColor: gradient,
          borderColor: '#9FA9F0',
          borderWidth: 2,
          borderRadius: 8,
          borderSkipped: false,
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
          legend: {
            display: true,
            labels: {
              color: '#333333',
              font: {
                family: 'Kanit',
                size: 14
              }
            }
          },
          tooltip: {
            backgroundColor: '#9FA9F0)',
            titleColor: '#ffffff',
            bodyColor: '#ffffff',
            borderColor: '#9FA9F0',
            borderWidth: 1,
            cornerRadius: 8,
            font: {
              family: 'Kanit'
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            title: {
              display: true,
              text: 'จำนวน (ครั้ง)',
              color: '#9FA9F0',
              font: {
                family: 'Kanit',
                size: 14,
                weight: 'bold'
              }
            },
            ticks: {
              color: '#333333',
              font: {
                family: 'Kanit'
              }
            },
            grid: {
              color: 'rgba(255, 154, 162, 0.1)'
            }
          },
          x: {
            title: {
              display: true,
              text: 'ช่วงเวลา',
              color: '#FF9AA2',
              font: {
                family: 'Kanit',
                size: 14,
                weight: 'bold'
              }
            },
            ticks: {
              color: '#333333',
              font: {
                family: 'Kanit'
              }
            },
            grid: {
              color: 'rgba(255, 154, 162, 0.1)'
            }
          }
        },
        animation: {
          duration: 1000,
          easing: 'easeOutQuart'
        }
      }
    });
  </script>
</body>
</html>