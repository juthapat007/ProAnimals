<body>

  <div class="container">
    <%- include('../partials/header_vet') %>
    <h2>กำหนดวันเปิดทำการของคุณหมอ</h2>

    <form method="POST" action="/veterinarian/work_days/add">
      <label for="datepicker">เลือกวันทำงาน:</label>
      <input type="text" id="datepicker" name="work_dates" required><i class="fa-solid fa-calendar-days calendar-icon"></i>
      <button type="submit">บันทึก</button>
    </form>

    <table>
      <tr>
        <th>วันที่</th>
        <th>การจัดการ</th>
      </tr>
      <% schedule.forEach(row => { %>
        <tr>
          <td><%= new Date(row.work_date).toLocaleDateString("th-TH") %></td>
          <td>
            <center>
            <a href="/veterinarian/work_days/delete/<%= row.work_date.toISOString().slice(0, 10) %>" 
               class="delete-btn"
               onclick="return confirm('คุณแน่ใจว่าต้องการลบวันนี้หรือไม่?');">
               ลบ
            </a></center>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script>
    const disabledDates = <%- JSON.stringify(disabledDates) %>;
    flatpickr("#datepicker", {
      mode: "multiple",
      dateFormat: "Y-m-d",
      minDate: "today",
      disable: disabledDates,
      onReady: function (selectedDates, dateStr, instance) {
        const customButton = document.createElement("button");
        customButton.textContent = "เลือกทั้งเดือนนี้";
        customButton.type = "button";
        customButton.style.margin = "5px";
        customButton.style.padding = "5px 10px";
        customButton.style.background = "#f26c78";
        customButton.style.color = "white";
        customButton.style.border = "none";
        customButton.style.borderRadius = "6px";
        customButton.style.cursor = "pointer";

        customButton.addEventListener("click", () => {
          const currentYear = instance.currentYear;
          const currentMonth = instance.currentMonth;
          const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();
          const dates = [];
          for (let day = 1; day <= daysInMonth; day++) {
            const date = new Date(currentYear, currentMonth, day);
            const formattedDate = instance.formatDate(date, "Y-m-d");
            if (date >= new Date() && !disabledDates.includes(formattedDate)) {
              dates.push(date);
            }
          }
          instance.setDate(dates, true);
        });

        instance.calendarContainer.appendChild(customButton);
      }
    });
  </script>

