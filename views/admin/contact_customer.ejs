<!DOCTYPE html>
<html lang="th">
<head>
<meta charset="UTF-8">
    <%- include('../partials/link') %>
<title>ระบบจัดการลูกค้า</title>
</head>
<body>
  
<div class="container">

  <%- include('../partials/header_admin') %>
    <div style="display: flex;justify-content: space-between;">
        <div class="section-title">ข้อมูลและช่องทางการติดต่อ ลูกค้า</div>
        <input type="text" class="form-row" id="searchName" placeholder="ค้นหา ชื่อ-นามสกุล" required>
    </div><br>
    <ul id="resultList" style="list-style:none; padding:0; margin-top:4px;"></ul><br>

    <!-- ฟอร์มสำหรับจัดการข้อมูลลูกค้า -->
    <form action="/admin/contact_customer/add" method="post" enctype="application/x-www-form-urlencoded">

        <!-- <input type="hidden" id="cus_id" name="cus_id"> -->
        <!-- <input class="form-row" type="text" name="cus_id" id="cus_id" placeholder="ลำดับ" required> -->
        <input class="form-row" type="text" id="cus_id" name="cus_id" placeholder="ลำดับ" readonly>
        <input class="form-row" type="text" id="cus_name" name="name" placeholder="ชื่อ-นามสกุล" required>
<input class="form-row" type="email" id="cus_email" name="email" placeholder="Email">
<input class="form-row" type="tel" id="cus_phon" name="phone" placeholder="เบอร์โทร" required>

        <button type="button" id="addBtn" class="btn-info">เพิ่ม</button>
        <button type="button" id="editBtn" class="btn-edit" disabled>แก้ไข</button>
        <button type="button" id="deleteBtn" class="btn-delete" disabled>ลบ</button>
        <button type="button" id="clearBtn" class="btn" style="background-color: #95a5a6;">เคลียร์</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>ลำดับ</th>
                <th>ชื่อ</th>
                <th>เบอร์โทร</th>
                <th>Email</th>
                <th>จัดการข้อมูล</th>
            </tr>
        </thead>
        <tbody>
        <% customers.forEach(customer => { %>
        <tr class="clickable-row"
          data-id="<%= customer.cus_id %>"
          data-name="<%= customer.cus_name %>"
          data-email="<%= customer.cus_email %>"
          data-phon="<%= customer.cus_phon %>" >
          
        <td><%= customer.cus_id %></td>
        <td><%= customer.cus_name %></td>
        <td><%= customer.cus_phon %></td>
        <td><%= customer.cus_email %></td>
        <td>
  <div class="btn" onclick="sendEmail('<%= customer.cus_email %>')">
    <i class="fas fa-envelope"></i>
  </div>
  <button type="button" class="btn" style="background-color: #FFC14E;" onclick="goToPetList('<%= customer.cus_id %>')">สัตว์เลี้ยงที่มี</button>
</td>


        </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<script>
// ฟังก์ชันไปหน้ารายการสัตว์เลี้ยง
function goToPetList(cusId) {
    if (cusId) {
        window.location.href = `/admin/add_pet?cus_id=${encodeURIComponent(cusId)}`;
    } else {
        alert("ไม่พบ cus_id");
    }
}

// ฟังก์ชันไปหน้าเพิ่มสัตว์เลี้ยง
function goToAddPet() {
    const cusId = document.getElementById("cus_id").value;
    if (cusId) {
        window.location.href = `/admin/add_pet?cus_id=${encodeURIComponent(cusId)}`;
    } else {
        alert("กรุณาเลือกลูกค้าก่อน");
    }
}

// ฟังก์ชันไปหน้าชำระเงิน
function Pay() {
    const cusId = document.getElementById("cus_id").value;
    if (cusId) {
        window.location.href = `/total_pay?cus_id=${encodeURIComponent(cusId)}`;
    } else {
        alert("กรุณาเลือกลูกค้าก่อน");
    }
}

// เมื่อหน้าเว็บโหลดเสร็จ
document.addEventListener("DOMContentLoaded", function () {
    const addBtn = document.getElementById("addBtn");
    const editBtn = document.getElementById("editBtn");
    const deleteBtn = document.getElementById("deleteBtn");
    const clearBtn = document.getElementById("clearBtn");
    const customerForm = document.getElementById("customerForm");

    // เมื่อคลิกแถวในตาราง
    document.querySelectorAll(".clickable-row").forEach(function (row) {
        row.addEventListener("click", function () {
            // ดึงข้อมูลจาก data-* attributes
            const id = this.dataset.id;
            const name = this.dataset.name;
            const email = this.dataset.email;
            const phon = this.dataset.phon;
            
            // นำข้อมูลใส่ในฟอร์ม
            document.getElementById("cus_id").value = id;
            document.getElementById("cus_name").value = name;
            document.getElementById("cus_email").value = email;
            document.getElementById("cus_phon").value = phon;
            
            // เปิดใช้งานปุ่มแก้ไขและลบ
            editBtn.disabled = false;
            deleteBtn.disabled = false;
            addBtn.textContent = "เพิ่ม";
        });
    });

    // ปุ่มเพิ่มลูกค้า
    addBtn.addEventListener("click", function(e) {
        e.preventDefault();
        const name = document.getElementById("cus_name").value.trim();
        const email = document.getElementById("cus_email").value.trim();
        const phone = document.getElementById("cus_phon").value.trim();

        if (!name || !phone) {
            alert("กรุณากรอกชื่อและเบอร์โทร");
            return;
        }

        // สร้าง form data และส่งไปยัง server
        const formData = new FormData();
        formData.append('name', name);
        formData.append('email', email);
        formData.append('phone', phone);

        
        
       fetch('/admin/contact_customer/add', {
    method: 'POST',
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ name, email, phone })
})
.then(res => res.json())
.then(result => {
    if (result.success) {
        alert(result.message);
        location.reload();
    } else {
        alert(result.message);
    }
});


    });

    // ปุ่มแก้ไขลูกค้า
    // ปุ่มแก้ไขลูกค้า
editBtn.addEventListener("click", function(e) {
    e.preventDefault();
    const id = document.getElementById("cus_id").value;
    const name = document.getElementById("cus_name").value.trim();
    const email = document.getElementById("cus_email").value.trim();
    const phone = document.getElementById("cus_phon").value.trim();

    if (!id) {
        alert("กรุณาเลือกลูกค้าที่ต้องการแก้ไข");
        return;
    }

    if (!name || !phone) {
        alert("กรุณากรอกชื่อและเบอร์โทร");
        return;
    }

    if (confirm("คุณต้องการแก้ไขข้อมูลลูกค้านี้ใช่หรือไม่?")) {
        fetch(`/admin/contact_customer/edit/${id}`, {
            method: 'POST',
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ name, email, phone })
        })
        .then(res => res.json())
        .then(result => {
            if (result.success) {
                alert(result.message);
                location.reload();
            } else {
                alert(result.error || "เกิดข้อผิดพลาดในการแก้ไขข้อมูล");
            }
        })
        .catch(err => {
            console.error("Edit error:", err);
            alert("เกิดข้อผิดพลาดในการแก้ไขข้อมูล");
        });
    }
});


    // ปุ่มลบลูกค้า
    deleteBtn.addEventListener("click", function(e) {
        e.preventDefault();
        const id = document.getElementById("cus_id").value;
        const name = document.getElementById("cus_name").value;

        if (!id) {
            alert("กรุณาเลือกลูกค้าที่ต้องการลบ");
            return;
        }

        if (confirm(`คุณต้องการลบลูกค้า "${name}" ใช่หรือไม่?\nการลบจะไม่สามารถกู้คืนได้`)) {
            fetch(`/admin/contact_customer/delete/${id}`, {
                method: 'GET'
            })
            .then(response => {
                if (response.ok) {
                    alert("ลบลูกค้าเรียบร้อย");
                    location.reload();
                } else {
                    alert("เกิดข้อผิดพลาดในการลบลูกค้า");
                }
            })
            .catch(err => {
                console.error("Delete error:", err);
                alert("เกิดข้อผิดพลาดในการลบลูกค้า");
            });
        }
    });

    // ปุ่มเคลียร์ฟอร์ม
    clearBtn.addEventListener("click", function(e) {
        e.preventDefault();
        document.getElementById("cus_id").value = "";
        document.getElementById("cus_name").value = "";
        document.getElementById("cus_email").value = "";
        document.getElementById("cus_phon").value = "";
        
        editBtn.disabled = true;
        deleteBtn.disabled = true;
        addBtn.textContent = "เพิ่ม";
    });

    // ฟังก์ชันค้นหาลูกค้า
    document.getElementById("searchName").addEventListener("keyup", function() {
        const searchValue = this.value.trim();
        const list = document.getElementById("resultList");
        list.innerHTML = "";

        if (searchValue.length < 2) return;

        fetch(`/admin/contact_customer/search_customer?name=${encodeURIComponent(searchValue)}`)
        .then(res => res.json())
        .then(data => {
            if (data.length === 0) {
                list.innerHTML = "<li>ไม่พบข้อมูล</li>";
                return;
            }
            
            data.forEach(cus => {
                const li = document.createElement("li");
                li.innerHTML = `
                <div style="padding: 8px; border: 1px solid #ddd; margin: 2px 0; cursor: pointer; background: #f9f9f9;">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div style="display: flex; gap: 15px;">
                            <strong style="width: 30px;">${cus.cus_id}</strong>
                            <span style="color: #2c3e50; min-width: 150px;">${cus.cus_name}</span>
                            <span style="color: #27ae60; min-width: 120px;">${cus.cus_phon}</span>
                            <span style="color: #2980b9;">${cus.cus_email}</span>
                        </div>
                        <div>
                            <button class="btn-edit" style="margin-right: 5px;" onclick="selectCustomer(${cus.cus_id}, '${cus.cus_name}', '${cus.cus_email}', '${cus.cus_phon}')">เลือก</button>
                        </div>
                    </div>
                </div>`;
                
                list.appendChild(li);
            });
        })
        .catch(err => console.error("Search error:", err));
    });

    // ฟังก์ชันเลือกลูกค้าจากผลการค้นหา
    window.selectCustomer = function(id, name, email, phone) {
        document.getElementById("cus_id").value = id;
        document.getElementById("cus_name").value = name;
        document.getElementById("cus_email").value = email;
        document.getElementById("cus_phon").value = phone;
        document.getElementById("resultList").innerHTML = "";
        document.getElementById("searchName").value = "";
        
        editBtn.disabled = false;
        deleteBtn.disabled = false;
    };
});
function sendEmail(email,name) {
    if (!email) {
        alert("ไม่พบอีเมลของลูกค้า");
        return;
    }
    window.location.href = `mailto:${email}?subject=ติดต่อจากคลินิกไชยปราการสัตวแพทย์&body=เรียน คุณ${name} ตอนนี้คิวของคุณใกล้จะถึงแล้วนะคะ รบกวนเดินทางมารอที่ร้านได้เลยค่ะ ขอบคุณมากค่ะ 💚🐶🐱`;
}


</script>
</body>
</html>