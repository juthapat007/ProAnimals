<body>
  <div class="container" style="width: 1200px;">
  <%- include('../partials/header_admin') %>

    <form method="post" action="/add_pet" enctype="multipart/form-data">
      <div class="form-group">
        <strong>เพิ่มข้อมูลสัตว์ที่เข้ารักษา</strong>
        <br>
        
        <div class="form-row" style="justify-content: space-between;">

            <p><strong>รหัสลูกค้า:</strong> <%= cusId %></p>
            <input type="hidden" name="cus_id" value="<%= cusId %>">
            <p><strong>ชื่อ-นามสกุล:</strong> <%= customer.cus_name %></p>
            <p><strong>Email:</strong> <%= customer.cus_email %></p>
            <p><strong>เบอร์โทร:</strong> <%= customer.cus_phon %></p>
        </div>
      </div>

      
      <div class="form-row">
  <input type="text" name="pet_type" placeholder="ชื่อสัตว์เลี้ยง เช่น มะลิ" required>
  <select name="pet_gender" required>
          <option value="">--กรุณาเลือกเพศ--</option>
          <option value="ผู้">ผู้</option>
          <option value="เมีย">เมีย</option>
        </select>
</div>


      <div class="form-row">
        <select name="pet_type" required>
    <option value="">--กรุณาเลือกประเภทสัตว์--</option>
    <% types.forEach(type => { %>
      <option value="<%= type.type %>"><%= type.type %></option>
    <% }); %>
  </select>
      </div>


<div class="pet-image-box">
  <label for="pet_image"><i class="fas fa-cloud-upload-alt"></i> เลือกรูปสัตว์เลี้ยง</label>
  <input type="file" name="pet_image" id="pet_image" accept="image/*" style="display:none;">
  <center>
  <div style="margin-top:10px;">
    <img id="preview" src="" alt="ตัวอย่างรูป" style="max-width:200px; display:none; border:1px solid #ccc; padding:5px; border-radius:8px;">
  </div></center>
</div>
<button class="submit-btn" >บันทึก</button>

